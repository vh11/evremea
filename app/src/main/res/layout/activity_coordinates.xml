<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoordinatesActivity">
    <TextView
        android:id="@+id/tv_lat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Longitude"
        android:textSize="24dp"
        />
    <EditText
        android:id="@+id/et_lat"
        app:layout_constraintTop_toBottomOf="@id/tv_lat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        />
    <TextView
        android:id="@+id/tv_lon"
        app:layout_constraintTop_toBottomOf="@id/et_lat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latitude"
        android:textSize="24dp"
        />
    <EditText
        android:id="@+id/et_lon"
        app:layout_constraintTop_toBottomOf="@id/tv_lon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        />
    <Button
        android:id="@+id/button_request"
        app:layout_constraintTop_toBottomOf="@id/et_lon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request"
        android:textSize="24dp"
        />
    <TextView
        android:id="@+id/tv_info"
        app:layout_constraintTop_toBottomOf="@id/button_request"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:textSize="24dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>